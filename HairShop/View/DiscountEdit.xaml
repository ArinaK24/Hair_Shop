<Window x:Class="HairShop.View.DiscountEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairShop.View"
        mc:Ignorable="d"
        Title="Акция" Height="265" Width="470" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Rectangle Margin="0,0,0,0" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <ImageBrush/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Название:" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="#546e7a"/>
        <TextBox Text="{Binding Discount_Name}" HorizontalAlignment="Left" Height="23" Margin="116,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
             Width="333" Background="#eceff1"/>
        <Label Content="Процент:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"  FontWeight="Bold" Foreground="#546e7a"/>
        <TextBox Text="{Binding Discount_Percent}" HorizontalAlignment="Left" Height="23" Margin="116,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
             Width="333" Background="#eceff1"/>
        <Label Content="Дата начала:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"  FontWeight="Bold" Foreground="#546e7a"/>
        <Rectangle HorizontalAlignment="Left" Margin="116,72,0,0" VerticalAlignment="Top" Width="333" Height="28" Fill="#eceff1"/>
        <DatePicker SelectedDate="{Binding Discount_DateBeg}" HorizontalAlignment="Left" Margin="116,72,0,0" VerticalAlignment="Top" Width="333" 
             Background="#eceff1" BorderBrush="#546e7a" Height="28"/>
        <Label Content="Дата окончания:" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top"  FontWeight="Bold" Foreground="#546e7a"/>
        <Rectangle HorizontalAlignment="Left" Margin="116,104,0,0" VerticalAlignment="Top" Width="333" Height="28" Fill="#eceff1"/>
        <DatePicker SelectedDate="{Binding Discount_DateEnd}" HorizontalAlignment="Left" Margin="116,104,0,0" VerticalAlignment="Top" Width="333" 
             Background="#eceff1" BorderBrush="#546e7a" Height="28"/>
        <Label Content="Тип товара:" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top"  FontWeight="Bold" Foreground="#546e7a"/>
        <ComboBox DisplayMemberPath="Product_Type_Name" ItemsSource="{Binding ProductTypes}"  SelectedItem="{Binding SelectedProductType}" HorizontalAlignment="Left"
             Background="#eceff1" Margin="116,136,0,0" VerticalAlignment="Top" Width="333"/>
        <Button Content="Сохранить" Command="{Binding Save_Discount}" HorizontalAlignment="Left" Margin="82,188,0,0" VerticalAlignment="Top" Width="119"
                Style="{StaticResource MaterialDesignRaisedButton}" 
                Background="#eceff1" Foreground="#546e7a" Height="28"/>
        <Button Content="Отменить" Command="{Binding Close_Win}" HorizontalAlignment="Left" Margin="269,188,0,0" VerticalAlignment="Top" Width="119"
                Background="#eceff1" Foreground="#546e7a" Height="28"/>
   </Grid>
</Window>
